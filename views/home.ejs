<!DOCTYPE html>
<html>

<head>
<meta charset=”utf-8”> 

<title><%= user.username %>'s Homepage</title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel = "stylesheet" type ="text/css" href = "stylesheets/bootstrap/css/bootstrap.css">

<script src="javascripts/jquery-1.11.0.min.js"></script>


</head>

<body>

    <% include fragments/header %> 

   	<script>
	$( "#locker" ).addClass("active");
	</script>


<div class="container">

	<div class="row">

		<!--Calendar Area-->
		<div class="col-md-3 col-sm-3 col-xs-3">

		</div>


		<!--Post Area-->
		<div class="col-md-6 col-sm-6 col-xs-6">
			<div class="row">
			<center>
			<textarea style="resize:none" rows="4" cols="50" value="" placeholder="Write something here..." resize="none"></textarea>
			
		  	<a id="btn-post" class="btn btn-primary">Post</a>
			</center>
			</div>			

			<hr>

<% for (var i=0; i<posts.length; i++){ %>
	
			<div class="row">

				<div class="col-md-1">
					<center>
					<%=users[i].username%>
					<% if (users[i].avatar_url===undefined) { %>

					<img src= "/images/generic_person.jpg" width="65" height="65">

					<% } else { %>

					<img src= <%=users[i].avatar_url %> width="65" height="65">

					<% } %>
					</center>
				</div>

				<div class="col-md-6">
				</div>

				<div class="col-md-5">
					<center>
					<%=posts[i].created%>
					</center>
				</div>
		
			</div>	
	
			<div style="margin-top:30px;margin-bottom:30px" class="row">

				<%=posts[i].text%>

			</div>
	
			<hr>

<% } %>
			
		</div>


		<!--Graph area-->
		<div class="col-md-3 col-sm-3 col-xs-3">

		</div>
	
	</div>

<!--container-->
</div>

<% include fragments/footer %>


<script src = "javascripts/bootstrap.js"></script>


</body>


</html>
