<!DOCTYPE html>
<html>

<head>
    <meta charset=”utf-8”>

    <title>Edit workout "<%= workout.name%>"</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel = "stylesheet" type ="text/css" href = "/stylesheets/bootstrap/css/bootstrap.css">

    <script src="/javascripts/jquery-1.11.0.min.js"></script>
    <script src="/javascripts/htmlForWorkout.js"></script>
    <script src="/javascripts/workoutcreator.js"></script>

</head>

<body>

<% include ../fragments/header %>

<div id="workoutObj" style="display:none"><%= JSON.stringify(workout) %></div>

<div class="container">

	<div style="margin-top:20px" class="row">

				<div style="margin-bottom: 25px">
                    
					<center><h2>Edit workout</h2></center>
							
                </div>
     
			<div id="workoutform" class="form-horizontal col-md-6 col-sm-6 col-xs-6 col-md-offset-3  col-sm-offset-3 col-xs-offset-3 well" >

                            <div id="errorSection"></div>

                            <div style="margin-bottom: 15px" class="input-group">
                                <h5>Name:</h5>
                                <input id="workout_name" type="text" class="form-control" name="query" value="">
                            </div>

                            <div style="margin-bottom: 15px" class="input-group">
                                <h5>Workout:</h5>
                                <div id="workoutDisplay"></div>
                            </div>

                            <div style="margin-bottom: 15px" class="input-group">
                                <h5>Difficulty:</h5>
                                <select id="difficulty" class="form-control" name="difficulty">
                                    <option>Beginner</option>
                                    <option>Intermediate</option>
                                    <option>Advanced</option>
                                </select>

                            </div>

                            <div style="margin-bottom: 15px" class="input-group">
                                <h5>Description:</h5>
                                <textarea class="form-control" id="description" style="resize:vertical" rows="4"
                                          cols="50" name="description" maxlength="1023"></textarea>

                            </div>

                            <div>
                                <div class="panel panel-default">
                                    <div class="panel panel-heading">
                                        <h3 class="panel-title">Photos and videos:</h3>
                                    </div>
                                    <div id="enteredMedia" class="panel-body"></div>
                                </div>
                                <button class="btn btn-default" style="margin-bottom: 15px" id="addMediaButton">Add photo or video</button>
                            </div>
                              <div class="form-group pull-right">
                                   <div class="col-sm-12 controls">
                                         <button class="btn btn-success" id="saveExerciseButton">Save exercise</button>
                                    </div>
                                    
                              </div>

                              <div class="form-group pull-left">
                                   <div class="col-sm-12 controls">
                                      <a id="btn-cancel" href=
                                         "/encyclopedia/workout_entry?wid=<%= workout.id %>"
                                         class="btn btn-danger">Cancel</a>
                                    </div>
                              </div>

					

             </div>
		  
	<!--row-->
	</div>
<!--container-->
</div>

<% include ../fragments/footer %>

<script src = "javascripts/bootstrap.js"></script>


</body>


</html>

