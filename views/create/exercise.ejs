<!DOCTYPE html>
<html>

<head>
<meta charset=”utf-8”> 

<title><%= title %></title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel = "stylesheet" type ="text/css" href = "../stylesheets/bootstrap/css/bootstrap.css" >

<script src="../javascripts/jquery-1.11.0.min.js"></script>
<script src="../javascripts/createExercise.js"></script>

</head>

<body>

<% include ../fragments/header %>

<div id="eid" style="display:none"><% if(exercise) { %><%= exercise.id %><% } %></div>
<div id="exerciseObj" style="display:none"><% if(exercise) { %><%= JSON.stringify(exercise) %><% } %></div>

<div class="container">

	<div style="margin-top:20px" class="row">

				<div style="margin-bottom: 25px">
                    
					<center><h2>Create a new exercise</h2></center>  
							
                </div>
     
			<div id="exerciseform" class="form-horizontal col-md-6 col-sm-6 col-xs-6 col-md-offset-3  col-sm-offset-3 col-xs-offset-3 well" >

                            <div id="errorSection"></div>

                            <div class="panel panel-default">
                                <div class="panel panel-heading">
                                    <h3 class="panel-title">Names:</h3>
                                </div>
                                <div id="enteredNames" class="panel-body">
                                </div>
                            </div>
                            <button class="btn btn-default" style="margin-bottom: 15px" id="addNameButton">Add name</button>

                            <%  // logic for finding difficulty
                            if(exercise)
                                var diffsel = parseInt(exercise.difficulty.id);
                            %>
							<div style="margin-bottom: 15px" class="input-group">
	           					<h5>Difficulty:</h5>
								<select id="difficulty" class="form-control" name="difficulty">
									<option <% if(diffsel === 1) { %>selected<% } %>>Beginner</option>
									<option <% if(diffsel === 2) { %>selected<% } %>>Intermediate</option>
									<option <% if(diffsel === 3) { %>selected<% } %>>Advanced</option>
								</select>
							
                            </div>
                                
                            <div style="margin-bottom: 15px" class="input-group">
								<h5>Description:</h5>
								<textarea class="form-control" id="description" style="resize:vertical" rows="4"
                                          cols="50" name="description" maxlength="1023"
                                        ><% if (exercise) { %><%= exercise.description %><% } %></textarea>
               
                            </div>

                            <%  // logic for finding muscle group
                            if(exercise)
                                var muscsel = parseInt(exercise.musclegroup.id);
                            %>

							<div style="margin-bottom: 15px" class="input-group">
								<h5>Muscle Groups</h5>
								<select id="musclegroup" class="form-control" name="musclegroup">
                                    <option value="Whole body"
                                            <% if(muscsel === 1) {%>selected<% } %>
                                            >Whole body</option>
                                    <option value="Upper body"
                                            <% if(muscsel === 2) {%>selected<% } %>
                                            >Upper body</option>
									<option value="Lower body"
                                            <% if(muscsel === 3) {%>selected<% } %>
                                            >Lower body</option>
									<option value="Core"
                                            <% if(muscsel === 4) {%>selected<% } %>
                                            >Core</option>
								</select>
                            </div>
                            <div>
                                <div class="panel panel-default">
                                    <div class="panel panel-heading">
                                        <h3 class="panel-title">Photos and videos:</h3>
                                    </div>
                                    <div id="enteredMedia" class="panel-body">
                                        <% if(exercise) {
                                                for(var i = 0; i < exercise.photos.length; i++) { %>
                                        <a class="btn btn-sm btn-primary"><%= exercise.photos[i].url %></a>
                                        <%   }
                                        } %>
                                        <% if(exercise) {
                                                for(var i = 0; i < exercise.videos.length; i++) { %>
                                        <a class="btn btn-sm btn-primary"><%= exercise.videos[i].url %></a>
                                        <%   }
                                        } %>
                                    </div>
                                </div>
                                <button class="btn btn-default" style="margin-bottom: 15px" id="addMediaButton">Add photo or video</button>
                            </div>
                              <div class="form-group pull-right">
                                   <div class="col-sm-12 controls">
                                   	<!--
                                      <a id="btn-save" href="exercise/save" class="btn btn-success">Save Exercise</a>
                                  -->

                                         <button class="btn btn-success" id="saveExerciseButton">Save exercise</button>

                                    </div>
                                    
                              </div>

                              <div class="form-group pull-left">
                                   <div class="col-sm-12 controls">
                                      <a id="btn-cancel" href=
                                         "exercise/cancel<% if(exercise) { %>?eid=<%= exercise.id %><% } %>"
                                         class="btn btn-danger">Cancel</a>
                                    </div>
                              </div>

					

             </div>
		  
	<!--row-->
	</div>
<!--container-->
</div>

<% include ../fragments/footer %>

<script src = "../javascripts/bootstrap.js"></script>


</body>


</html>

