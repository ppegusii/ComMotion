<!DOCTYPE html>
<html>

<head>
<meta charset=”utf-8”> 

<title><%= title %></title>
<meta name="viewport" content="width=device-width, initial-scale=1">

<link rel = "stylesheet" type ="text/css" href = "stylesheets/bootstrap/css/bootstrap.css" >

<script src="../javascripts/jquery-1.11.0.min.js"></script>

</head>

<body>

<% include fragments/header %>

	<script>
	$( "#findusers" ).addClass("active");
	</script>

<div class="container">

<div class="row">

		<div class="col-md-4 col-sm-4 col-xs-4">

			<% include fragments/usersearchpanel %>			

			</div>

	<div class="col-md-8 col-sm-8 col-xs-8">


		<!--Populates a 5x2 grid of popular exercises -->
	
	<h3>Popular Users</h3>
	<hr>

    <% for (var i=0; i<Math.ceil(users.length/5); i++){ %>
        <div class="row">
            <% for(var j=0; j<Math.min(5, users.length-5*i); j++) {
                var user = users[i*5+j];
                var thumb = "images/generic_person.jpg";
                if(user.avatar_url !== undefined)
                    thumb = user.avatar_url;
            %>
            <div class="col-md-2 col-sm-2 col-xs">
                <center>
                    <a href="/profile/user?currentUser=<%=user.id%>">
                        <img src=<%=thumb%> style="width:80px; height:80px">
                    </a>
                    <h4><%= user.username %></h4>
                </center>
            </div>
            <% } %>
        </div>
        <% } %>

	</div>



		</div>

	</div>
		
</div>

<% include fragments/footer %>

<script src = "javascripts/bootstrap.js"></script>


</body>


</html>

